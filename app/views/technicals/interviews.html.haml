:javascript
  $(document).ready(function(){
    $("#interview").dataTable({
        sPaginationType: 'full_numbers',
        bJQueryUI: true
    });
  });
%h3 Technical interviews
%div{:style=>"float:right"}
  =link_to "Add new", new_interview_path, :class=>"button" if current_user && current_user.role == ADMIN
%table#interview.display
  %thead
    %tr
      %th Posted on
      %th Name
      - if current_user && current_user.role == ADMIN
        %th Edit
        %th Delete
  %tbody
    - @interviews.each do |interview|
      %tr
        %td= interview.created_at.to_s(:long)
        %td= link_to interview.name, interview
        - if current_user && current_user.role == ADMIN
          %td= link_to "Edit", edit_interview_path(interview)
          %td= link_to "Delete", interview_path(interview),:confirm => 'Are you sure?', :method=> :delete