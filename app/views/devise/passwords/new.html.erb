<table style="margin: 0 auto;padding: 3px 3px 3px 3px;">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <tr>
    <td colspan="2"><%= f.label "Send reset password instruction to", :class=>'black_text' %></td>
  </tr>
  <tr>
    <td colspan="2"><%= f.email_field :email, :autofocus => true %></td>
  </tr>

  <tr>
    <td colspan="2"><%= f.submit "Send", :class=>"button" %></td>
  </tr>
<% end %>

<tr>
  <td colspan="2">
    <%= render "devise/shared/links" %>
  </td>
</tr>
</table>