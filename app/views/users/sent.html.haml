:javascript
  jQuery(function() {
    $("#datatable").dataTable({
        sPaginationType: 'full_numbers',
        bJQueryUI: true
    });
  });
%h3 My queries
%div{:style=>"float:right"}
  =link_to "New query", query_users_path, :class=>"button"
%table#datatable.display
  %thead
    %tr
      %th Status
      %th Date
      %th Title
  %tbody
    - @sent.each do |mail|
      %tr
        %td= mail_status(mail)
        %td= mail.created_at.to_s(:long)
        %td= link_to mail.subject, show_mail_user_path(mail.id)