%table.central_table
  = form_for @book do |f|
    %tr
      %td Title
      %td= f.text_field :name
    %tr
      %td Description
      %td= f.cktext_area :description, :class=>"medium_text_area"
    %tr
      %td Content
      %td= f.file_field :content
    %tr
      %td Category
      %td= f.select :category, options_for_select([["Programming","Programming"], ["Text book", "Text book"], ["Campusing", "Campusing"], ["Others", "Others"] ])
    %tr
      %td{:colspan=>2}= f.submit "Save", :class=>"button"